.col-lg4.col-md-4.col-sm-4.col-sm-offset-4.col-md-offset-4.col-lg-offset-4
  .panel
    .form-group
      %h2 Login
      = form_tag sessions_path do
        = label_tag :email
        = text_field_tag :email, params[:email], class: "form-control"
        %br
        = label_tag :password
        = password_field_tag :password, nil, class: "form-control"
        %br
        %br
        = submit_tag "Login"